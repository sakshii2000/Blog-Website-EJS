<h1>Home</h1>
<p> <%= homeContent %> </p>

<% postsContent.forEach(function(post){ %>
  <a style="text-decoration : none;color: inherit; " href="/posts/<%= post.title %>">
    <h1> <%= post.title %></h1>
  </a>
  <p>
    <%= post.content.substring(0,100) + "..." %>
    <a href="/posts/<%= post.title %>">Read more</a>
  </p>
<% }); %>

